<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">



    <changeSet id="2021-11-15 Add bank_table" author="Riina Kaiv">
        <createTable tableName="bank_table">
            <column name="id" type="integer" autoIncrement="true">
                <constraints primaryKey="true"/>
            </column>
            <column name="name" type="text"/>
            <column name="account_nr" type="text"/>
            <column name="amount" type="integer"/>
        </createTable>
    </changeSet>

    <changeSet id="2021-11-15 Add transaction table" author="Riina Kaiv">
        <createTable tableName="transaction">
            <column name="id" type="integer" autoIncrement="true">
                <constraints primaryKey="true"/>
            </column>
            <column name="created" type="timestamp" defaultValue="now()"/>
            <column name="type" type="text"/>
            <column name="amount" type="integer"/>
            <column name="toaccount" type="text"/>
            <column name="fromaccount" type="text"/>

        </createTable>
    </changeSet>

    <changeSet id="2021-11-15 Add book table" author="Riina Kaiv">
        <createTable tableName="book">
            <column name="id" type="integer" autoIncrement="true">
                <constraints primaryKey="true"/>
            </column>
            <column name="description" type="text"/>
            <column name="name" type="text"/>
            <column name="author_id" type="integer">
                <constraints
                    unique="true"
                    nullable="true"/>
            </column>

        </createTable>
    </changeSet>

    <changeSet id="2021-11-18 Add vuebank table" author="Riina Kaiv">
        <createTable tableName="vuebank">
            <column name="id" type="integer" autoIncrement="true">
                <constraints primaryKey="true"/>
            </column>
            <column name="name" type="text"/>
            <column name="accountNr" type="text"/>
            <column name="amount" type="integer"/>

        </createTable>
    </changeSet>


</databaseChangeLog>
